public class Account {
    private double balance;
    private double interestRate;

    // Constructor with an initial balance (default to $0 if not provided)
    public Account(double initialBalance) {
        if (initialBalance >= 0) {
            balance = initialBalance;
        } else {
            balance = 0.0;
        }
        interestRate = 0.0;
    }

    // Deposit money into the account
    public void deposit(double amount) {
        if (amount > 0) {
            balance += amount;
            System.out.println("Deposited: $" + amount);
        } else {
            System.out.println("Invalid deposit amount.");
        }
    }

    // Withdraw money from the account with a $5 penalty for insufficient funds
    public void withdraw(double amount) {
        if (amount > 0) {
            if (balance >= amount) {
                balance -= amount;
                System.out.println("Withdrawn: $" + amount);
            } else {
                balance -= 5.0; // Apply a $5 penalty for insufficient funds
                System.out.println("Insufficient funds. $5 penalty applied.");
            }
        } else {
            System.out.println("Invalid withdrawal amount.");
        }
    }

    // Inquire the current balance
    public double getBalance() {
        return balance;
    }

    // Set the interest rate
    public void setInterestRate(double rate) {
        if (rate >= 0) {
            interestRate = rate;
        } else {
            System.out.println("Invalid interest rate.");
        }
    }

    // Compute and add interest to the account
    public void addInterest() {
        double interest = balance * interestRate;
        balance += interest;
        System.out.println("Interest added: $" + interest);
    }

    public static void main(String[] args) {
        // Create an account with an initial balance of $1000 and a 3% interest rate
        Account myAccount = new Account(1000.0);
        myAccount.setInterestRate(0.03);

        // Deposit $500
        myAccount.deposit(500.0);

        // Withdraw $200
        myAccount.withdraw(200.0);

        // Add interest
        myAccount.addInterest();

        // Check the current balance
        System.out.println("Current Balance: $" + myAccount.getBalance());
    }
}
